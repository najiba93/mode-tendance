<header>
	{#  Bloc du logo avec fallback text au cas où l’image ne charge pas #}
	<div class="logo-div">
		<img src="/img/logo.jpg" alt="Logo Mode & Tendance" class="logo-header">
		<span id="logo-fallback">Mode & Tendance</span>
	</div>


	{#  Menu de navigation principal #}
	<nav>
		<ul>
			{#  Lien vers la page d’accueil #}
			<li>
				<a href="{{ path('Accueil') }}">Accueil</a>
			</li>

			{#  Lien vers la page Produits #}
			<li>
				<a href="{{ path('Produits') }}">Produits</a>
			</li>



  





			{# Lien vers la page Catégories #}
			<li>
				<a href="{{ path('categorie') }}">Catégories</a>
			</li>







{% if is_granted('ROLE_ADMIN') %}
  <li><a href="{{ path('admin_produit_new') }}">Ajouter Produit</a></li>
{% endif %}




			{#  Liens conditionnels selon l’état de connexion de l’utilisateur #}
			{% if app.user %}
				{#  Utilisateur connecté : on affiche le bouton Déconnexion #}
				<li>
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</li>
			{% else %}
				{#  Utilisateur non connecté : on propose Connexion et Inscription #}
				<li>
					<a href="{{ path('app_login') }}">Connexion</a>
				</li>
				<li>
					<a href="{{ path('inscription') }}">Inscription</a>
				</li>
			{% endif %}
		</ul>
	</nav>


	{#  Icônes à droite du header (profil, panier, contact) #}
	<div
		class="icon-header">

		{#  Icône Profil — affichée uniquement si l’utilisateur est connecté #}
		{% if app.user %}
			<a href="{{ path('profil') }}" title="Mon Profil">
				<i class="fi fi-br-user"></i>
			</a>
		{% endif %}

		{#  Icône Panier — toujours visible #}
		<a href="{{ path('Panier') }}" title="Mon Panier">
			<i class="fi fi-bs-shopping-cart"></i>
		</a>

		{#  Icône Contact — toujours visible #}
		<a href="{{ path('contact') }}" title="Contactez-nous">
			<i class="fi fi-bs-envelope"></i>
		</a>
	</div>
</header>

{% extends 'base.html.twig' %}

{# ğŸ·ï¸ Titre de lâ€™onglet navigateur #}
{% block title %}Inscription{% endblock %}

{% block main %}
<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card p-4 shadow-sm">
        
        {# ğŸ§¾ Titre principal de la carte #}
        <h1 class="h4 mb-4 text-center">CrÃ©er un compte</h1>

        {# âœ… Affiche les messages flash en cas de succÃ¨s #}
        {% for message in app.flashes('success') %}
          <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {# ğŸ¨ Applique le thÃ¨me Bootstrap au formulaire #}
        {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

        {# ğŸ–Šï¸ DÃ©marre le formulaire Symfony #}
        {{ form_start(registrationForm) }}

        {# ğŸ“§ Champ Email avec espacement visuel #}
        <div class="mb-3">
          {{ form_row(registrationForm.email) }}
        </div>

        {# ğŸ‘¤ Nom dâ€™utilisateur #}
        <div class="mb-3">
          {{ form_row(registrationForm.username) }}
        </div>

        {# ğŸ“ PrÃ©nom #}
        <div class="mb-3">
          {{ form_row(registrationForm.firstName) }}
        </div>

        {# ğŸ“ Nom #}
        <div class="mb-3">
          {{ form_row(registrationForm.lastName) }}
        </div>

        {# ğŸ” Champ mot de passe personnalisÃ© (rendu manuellement) #}
        <div class="mb-3">
          <label for="registration_form_plainPassword" class="form-label">Mot de passe</label>
          <input
            type="password"
            name="registration_form[plainPassword]"
            id="registration_form_plainPassword"
            class="form-control"
            autocomplete="new-password"
            required
          >

          {# ğŸ‘ï¸ Case Ã  cocher pour afficher le mot de passe #}
          <div class="form-check mt-3">
            <input type="checkbox" class="form-check-input" id="togglePassword">
            <label class="form-check-label" for="togglePassword">Afficher le mot de passe</label>
          </div>
        </div>

        {# âœ… Bouton dâ€™envoi du formulaire #}
        <div class="d-grid mt-3">
          <button type="submit" class="btn btn-primary btn-lg">Sâ€™inscrire</button>
        </div>

       
      </div>
    </div>
  </div>
</div>
{% endblock %}


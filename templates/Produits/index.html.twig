{% extends 'base.html.twig' %}

{# üè∑Ô∏è Titre qui appara√Ætra dans l'onglet du navigateur #}
{% block title %}Produits{% endblock %}

{% block main %}
<div class="produits-container">
    {% if produits is not empty %}
        <div class="produits-grid">
            {% for produit in produits %}
                {% if produit.images|length > 0 %}
                    <div class="produit-card">
                        <a href="{{ path('produits_carte', {id: produit.id}) }}" class="produit-link">
                            <img src="{{ asset(produit.images[0].url) }}" 
                                 alt="{{ produit.nom }}" 
                                 class="produit-image"
                                 loading="lazy">
                            
                            <div class="produit-overlay">
                                <h4 class="produit-nom">{{ produit.nom }}</h4>
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <div class="no-products">
            <h3>Aucun produit disponible</h3>
            <p>Revenez bient√¥t pour d√©couvrir nos nouveaux produits !</p>
        </div>
    {% endif %}
</div>
{% endblock %}
{# ========================================
   TEMPLATE ADMIN - TABLEAU DE BORD
   ======================================== #}

{# üß± On h√©rite du layout principal : header, footer, CSS commun... #}
{% extends 'base.html.twig' %}

{# üè∑Ô∏è Titre qui appara√Ætra dans l'onglet du navigateur #}
{% block title %}Admin - Tableau de bord{% endblock %}

{# üéØ Bloc principal du tableau de bord administrateur #}
{% block main %}

	{# ========================================
	   CONTENEUR PRINCIPAL
	   ======================================== #}
	<div class="container py-4">
		
		{# ========================================
		   TITRE DE LA PAGE
		   ======================================== #}
		<h2 class="mb-4">Tableau de bord Admin</h2>

		{# ========================================
		   PREMI√àRE RANG√âE - STATISTIQUES
		   ======================================== #}
		<div class="row g-4 mb-4">
			
			{# ========================================
			   COLONNE GAUCHE - COMMANDES CLIENTS
			   ======================================== #}
			<div class="col-12 col-lg-6">
				<div class="card h-100">
					<div class="card-header fw-bold">Commandes clients</div>
					<div class="card-body">
						<ul class="list-group list-group-flush">
							{# ========================================
							   BOUCLE SUR LES COMMANDES CLIENTS
							   ======================================== #}
							{% for c in commandesClients %}
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<span>ID: {{ c.user.id }} - {{ c.date|date('d/m/Y') }}</span>
									<span class="fw-semibold">{{ c.total }} ‚Ç¨</span>
								</li>
							{% else %}
								{# ========================================
								   MESSAGE SI AUCUNE COMMANDE
								   ======================================== #}
								<li class="list-group-item text-muted">Aucune commande</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>

			{# ========================================
			   COLONNE DROITE - B√âN√âFICES PAR JOUR
			   ======================================== #}
			<div class="col-12 col-lg-6">
				<div class="card h-100">
					<div class="card-header fw-bold">B√©n√©fices par jour</div>
					<div class="card-body">
						<ul class="list-group list-group-flush">
							{# ========================================
							   BOUCLE SUR LES B√âN√âFICES
							   ======================================== #}
							{% for b in benefices %}
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<span>{{ b.date|date('d/m/Y') }}</span>
									<span class="fw-semibold">{{ b.benefice }} ‚Ç¨</span>
								</li>
							{% else %}
								{# ========================================
								   MESSAGE SI AUCUNE DONN√âE
								   ======================================== #}
								<li class="list-group-item text-muted">Aucune donn√©e</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>

		{# ========================================
		   DEUXI√àME RANG√âE - ARTICLES
		   ======================================== #}
		<div class="row g-4 mb-4">
			<div class="col-12">
				<div class="card">
					<div class="card-header fw-bold">Mes articles</div>
					<div class="card-body">
						<div class="row g-3">
							{# ========================================
							   BOUCLE SUR LES ARTICLES
							   ======================================== #}
							{% for article in mesArticles %}
								
								{# ========================================
								   COLONNE DE L'ARTICLE
								   ======================================== #}
								<div class="col-md-4 col-lg-3">
									<div class="card h-100">
										
										{# ========================================
										   IMAGE DE L'ARTICLE
										   ======================================== #}
										{% if article.images|length > 0 %}
											{# Affiche la premi√®re image si elle existe #}
											<img src="{{ asset(article.images|first.url) }}" 
												 alt="{{ article.nom }}" 
												 class="card-img-top" 
												 style="height: 200px; object-fit: cover;">
										{% else %}
											{# Placeholder si aucune image #}
											<div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
												 style="height: 200px;">
												<span class="text-muted">Aucune image</span>
											</div>
										{% endif %}
										
										{# ========================================
										   CORPS DE LA CARTE
										   ======================================== #}
										<div class="card-body">
											<h6 class="card-title">{{ article.nom }}</h6>
											<p class="card-text text-primary fw-bold">{{ article.prix }} ‚Ç¨</p>
										</div>
										
									</div> {# Fin de la carte de l'article #}
								</div> {# Fin de la colonne de l'article #}
								
							{% else %}
								{# ========================================
								   MESSAGE SI AUCUN ARTICLE
								   ======================================== #}
								<div class="col-12">
									<p class="text-muted text-center">Aucun article</p>
								</div>
							{% endfor %}
							
						</div> {# Fin de la rang√©e des articles #}
					</div> {# Fin du corps de la carte #}
				</div> {# Fin de la carte des articles #}
			</div> {# Fin de la colonne des articles #}
		</div> {# Fin de la rang√©e des articles #}
		
	</div> {# Fin du conteneur principal #}

{% endblock %}

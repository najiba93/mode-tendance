{# ========================================
   TEMPLATE DE CONNEXION
   ======================================== #}

{# üß± On h√©rite du layout principal : header, footer, CSS commun... #}
{% extends 'base.html.twig' %}

{# üè∑Ô∏è Titre qui appara√Ætra dans l'onglet du navigateur #}
{% block title %}Connexion{% endblock %}

{# üéØ Bloc principal de la page de connexion #}
{% block main %}

{# ========================================
   CONTENEUR PRINCIPAL
   ======================================== #}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
      {# ========================================
         CARTE DU FORMULAIRE
         ======================================== #}
      <div class="card p-4 shadow-sm">
        
        {# Titre principal du formulaire #}
        <h1 class="h4 mb-3 text-center">Connexion</h1>
        
        {# üåê Contenu principal de la page (remplace ici "main" si ton layout attend un bloc "body") #}

        {# ========================================
           MESSAGES DE SUCC√àS
           ======================================== #}
        {% for message in app.flashes('success') %}
          <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {# ========================================
           FORMULAIRE DE CONNEXION
           ======================================== #}
        <form method="post">
            
            {# ‚ö†Ô∏è Affichage d'un message d'erreur si la connexion √©choue #}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# ‚úÖ Si l'utilisateur est d√©j√† connect√©, on affiche un message et le lien de d√©connexion #}
            {% if app.user %}
                <div class="mb-3">
                    Vous √™tes connect√© en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">D√©connexion</a>
                </div>
            {% endif %}

            {# üßæ Titre du formulaire #}
            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            {# ========================================
               CHAMP EMAIL
               ======================================== #}
            {# üë§ Champ pour le nom d'utilisateur ou email #}
            <label for="username">Email</label>
            <input type="text" 
                   value="{{ last_username }}" 
                   name="_username" 
                   id="username" 
                   class="form-control" 
                   autocomplete="username" 
                   required 
                   autofocus>

            {# ========================================
               CHAMP MOT DE PASSE
               ======================================== #}
            {# üîê Champ pour le mot de passe #}
            <div class="mb-3">
              <label for="password">Mot de passe</label>
              <div class="input-group">
                <input type="password" 
                       name="_password" 
                       id="password" 
                       class="form-control" 
                       autocomplete="current-password" 
                       required>
              </div>
            </div>

            {# ========================================
               S√âCURIT√â CSRF
               ======================================== #}
            {# üõ°Ô∏è Jeton CSRF pour s√©curiser le formulaire contre les attaques #}
            <input type="hidden" 
                   name="_csrf_token" 
                   data-controller="csrf-protection" 
                   value="{{ csrf_token('authenticate') }}">

            {# ========================================
               OPTIONS SUPPL√âMENTAIRES
               ======================================== #}
            {# üîÅ Section optionnelle : case √† cocher pour rester connect√© (√† activer dans security.yaml) #}
            {#
                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>
            #}

            {# ========================================
               BOUTON DE SOUMISSION
               ======================================== #}
            {# ‚úÖ Bouton pour soumettre le formulaire #}
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>
        
      </div> {# Fin de la carte #}
      
    </div> {# Fin de la colonne #}
  </div> {# Fin de la rang√©e #}
</div> {# Fin du conteneur principal #}

{% endblock %}

